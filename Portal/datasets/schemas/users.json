                    } 
                },
                "Company": {
                    "type": "string",
                    "lng":{
                        "code": "Comapny",
                        "default":"Company"
                    } 
                },
                "Factory": {
                    "type": "string",
                    "lng":{
                        "code": "Factory",
                        "default":"Factory"
                    } 
                },
                "Department": {
                    "type": "string",
                    "lng":{
                        "code": "Department",
                        "default":"Department"
                    } 
                },
                "ProductionLineNo": {
                    "type": "string",
                    "lng":{
                        "code": "ProductionLineNo",
                        "default":"Production Line"
                    } 
                },                
                "WorkCenter": {
                    "type": "string",
                    "lng":{
                        "code": "WorkCenter",
                        "default":"Work Center"
                    } 
                },
                "CostCenter": {
                    "type": "string",
                    "lng":{
                        "code": "CostCenter",
                        "default":"Cost Center"
                    } 
                },
                "LanguageCode": {
                    "type": "string",
                    "lng":{
                        "code": "Language",
                        "default":"Language"
                    } 
                },
                "TimeZoneCode": {
                    "type": "string",
                    "lng":{
                        "code": "TimeZone",
                        "default":"Time Zone"
                    } 
                },
                "Active": {
                    "type": "boolean",
                    "readonly": true,
                    "lng":{
                        "code": "Active",
                        "default":"Active"
                    }
                },
                "workspaces": {
                    "type": "string",
                    "lng":{
                        "code": "WorkSpaces",
                        "default":"WorkSpaces"
                    } 
                },                
                "createdby": {
                    "type": "string",
                    "readonly": true,
                    "lng":{
                        "code": "CreatedBy",
                        "default":"Created By"
                    }
                },
                "createdon": {
                    "type": "string",
                    "format":"datetime",
                    "readonly": true,
                    "lng":{
                        "code": "CreatedOn",
                        "default":"Created On"
                    }

                },
                "updatedby": {
                    "type": "string",
                    "readonly": true,
                    "lng":{
                        "code": "UpdatedBy",
                        "default":"Updated By"
                    }
                },
                "updatedon": {
                    "type": "string",
                    "format":"datetime",
                    "readonly": true,
                    "lng":{
                        "code": "UpdatedOn",
                        "default":"Updated On"
                    }

                }
            },
            "required": ["uuid",
                "Name",
                "LoginName",
                "LoginCode",
                "WorkSpaces"
            ],
            "unchangable": ["id","uuid"],
            "hidden": ["id"],
            
            "title": "Users Maintenance"
        }
    }
}