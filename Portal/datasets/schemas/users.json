{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/User",
    "datasourcetype": "table",
    "datasource": "users",
    "listfields":["Name","FirstName","LastName","BadgeNo","LoginName", "CreatedBy", "CreatedOn", "UpdatedBy","UpdatedOn", "ID"],
    "keyfield":"ID",
    "detailpage":{
        "tabs": {
            "General": {
                "lng":{
                    "code": "General",
                    "default":"General"
                },
                "index": 0 
            },
            "Links":{
                "lng":{
                    "code": "Links",
                    "default":"Links"
                },
                "index": 1             
            },
            "System": {
                "lng":{
                    "code": "System",
                    "default":"System"
                },
                "index": 4 
            }
        },
        "General":{
            "tables": [{
                "cols": 3,
                "rows": 3,            
                "fields": [
                    {"PictureUrl": {"tag": "img", "attrs":{"rowspan": 3, "class": "img-thumbnail", "style": "width: 100px; height: 100px;"}, "nodeattrs":{"src":"user/image?username={LoginName}"}}},
                    "Name", "dummy", 
                    "FirstName", 
                    "MiddleName", 
                    "LastName",
                    "Email",
                    "Phone",
                    "CellPhone"
                ]
            },{
                "cols": 3,
                "fields":["LoginName", "LoginCode", "ExternalLogin", 
                        "BadgeNo",  "PasswordLastChangeDate","ForcePasswordChange",
                        "LastSignOnDate", "LastSignOffDate", "LoginExpirationDate",
                        "UserValidDate", "LoginLockoutDate", "dummy",
                        "CurrencyCode", "DefaultPage", "dummy",
                        {"Company":{"link": "companies", "schema":"companies", "field": "Name"}}, 
                        {"Factory":{"link": "factories", "schema":"factories", "field": "Name"}}, 
                        {"Department":{"link": "departments", "schema":"departments", "field": "Name"}},
                        {"ProductionLineNo":{"link": "lines", "schema":"lines", "field": "Name"}}, 
                        {"WorkCenter":{"link": "work_centers", "schema":"work_centers", "field": "Name"}}, "CostCenter", 
                        "Title", "UserClass", "UserType",
                        {"LanguageCode":
                            {"link": "languages", "schema":"languagecodes", "field": "code"}
                        }, 
                        {"TimeZoneCode":{
                            "link": "timezones", "schema":"timezones", "field": "code"
                        }},
                        "Active"
                        
                ]
            },
            {
                "cols":2,
                "type": "action",
                "fields":["save", "cancel"]
            }
        ]
        },
        "System":{
            "tables": [{
                "style":"display: flex;flex-direction: column;",
                "cols": 2,
                "fields":["createdby", "createdon", "updatedby", "updatedon"]
            }]
        },
        "Links":{
            "tables": [{
                "style":"display: flex;flex-direction: column;",
                "cols": 1,
                "fields": [
                    {"Addresss": {
                        "type": "singlelink",
                        "keyfield": "AddressID",
                        "schema": "addresses",
                        "linkfields": [
                            {"AddressID": "ID"}
                        ],
                        "data":{
                            "addresses": {
                                "fields": ["Address1", "Address2", "City", "State", "ZipCode", "Country"]
                            }
                        },
                        "lng":{
                            "code": "Addresses",
                            "default":"Addresses"
                        }                          
                    }},
                    {"ContactID": {
                        "type": "singlelink",
                        "keyfield": "ContactID",
                        "schema": "contacts",
                        "linkfields": [
                            {"ContactID": "ID"}
                        ],
                        "data":{
                            "contacts": {
                                "fields": ["Phone", "CellPhone", "Email"]
                            }
                        },
                        "lng":{
                            "code": "Contacts",
                            "default":"Contacts"
                        }                                                 
                    }},
                    {"Skill":{
                        "type": "link",
                        "linkfields": [
                            {"ID": "user_skills.UserID"}
                        ],
                        "keyfield": "ID",
                        "tablename": "user_skills",
                        "schema":"userskills",
                        "masterschema":"skills",
                        "masterdatafield":"skillid",
                        "data":{
                           "user_skills":{
                                "fields": ["Certification", "ExpirationDate"],                                
                                "subtables": {                          
                                    "skills":{
                                        "fields": ["Name", "Description", "Level"],
                                        "links": ["user_skills.SkillID = skills.ID"]
                                    }
                                }
                            }
                        },
                        "lng":{
                            "code": "Skills",
                            "default":"Skills"
                        },
                        "actions": ["Add", "Delete"]  
                    }},
                    {"Role":{
                        "type": "link",
                        "linkfields": [
                            {"ID": "user_roles.UserID"}
                        ],
                        "keyfield": "ID",
                        "tablename": "user_roles",
                        "schema":"userroles",
                        "masterschema":"roles",
                        "masterdatafield":"roleid",
                        "fields":{
                            "Name": {
                                "type": "string",
                                "lng":{
                                    "code": "Name",
                                    "default":"Name"
                                } 
                            },
                            "Description": {
                                "type": "string",
                                "lng":{
                                    "code": "Description",
                                    "default":"Description"
                                } 
                            },
                            "Permission": {
                                "type": "string",
                                "lng":{
                                    "code": "Permission",
                                    "default":"Permission"
                                } 
                            }
                        },                        
                        "data":{
                            "user_roles":{
                                "fields": ["Permission"],
                                "subtables": {                          
                                    "roles":{
                                        "fields": ["Name", "Description"],
                                        "links": ["user_roles.RoleID = roles.ID"]
                                    }
                                }
                            }
                        },                        
                        "lng":{
                            "code": "Roles",
                            "default":"Roles"
                        }  ,
                        "actions": ["Add", "Delete"]                     
                    }},
                    {"Menu":{
                        "type": "link",
                        "linkfields": [
                            {"ID": "user_roles.UserID"}
                        ],
                        "keyfield": "ID",
                        "tablename": "user_roles",
                        "schema":"userroles",
                        "masterschema":"roles",
                        "masterdatafield":"roleid",                                              
                        "data":{
                            "user_roles":{
                                "fields": [],
                                "subtables": {                          
                                    "menu_roles":{
                                        "fields": ["ViewOnly"],
                                        "links": ["user_roles.RoleID = menu_roles.RoleID"],
                                        "subtables":{
                                            "menus": {
                                                "fields": ["Name", "Description"],
                                                "links": ["menus.ID = menu_roles.MenuID"]
                                            }
                                        }
                                    }                                    
                                }
                            }
                        },                        
                        "lng":{
                            "code": "Menus",
                            "default":"Menus"
                        }  ,
                        "actions": []                          
                    }}
                ]
            }]
        },
        "Query":{
            "tablename": "users",
            "fields": [
                "ID",
                "Name",
                "FirstName",
                "LastName",
                "LoginName",
                "LoginCode",
                "BadgeNo",
                "Active"
            ],
            "where": "id = :id"
        }
    },    
    "definitions": {
        "User": {
            "type": "object",
            "additionalProperties": false,            
            "properties": {
                "ID": {
                    "type": "string",
                    "lng":{
                        "code": "DB_ID",
                        "default":"ID"
                    } 
                },
                "PictureUrl": {
                    "type": "string",                   
                    "lng":{
                        "code": "PictureUrl",
                        "default":"PictureUrl"
                    } 
                },
                "Name": {
                    "type": "string",                   
                    "lng":{
                        "code": "Name",
                        "default":"Name"
                    } 
                },
                "FirstName": {
                    "type": "string",
                    "lng":{
                        "code": "FirstName",
                        "default":"First Name"
                    } 
                },
                "MiddleName": {
                    "type": "string",
                    "lng":{
                        "code": "MiddleName",
                        "default":"Middle Name"
                    } 
                },
                "LastName": {
                    "type": "string",
                    "lng":{
                        "code": "LastName",
                        "default":"Last Name"
                    } 
                },
                "Email": {
                    "type": "string",
                    "format": "email",
                    "lng":{
                        "code": "Email",
                        "default":"Email"
                    } 
                },
                "Phone": {
                    "type": "string",
                    "lng":{
                        "code": "Phone",
                        "default":"Phone"
                    } 
                },
                "CellPhone": {
                    "type": "string",
                    "lng":{
                        "code": "CellPhone",
                        "default":"Cell"
                    } 
                },
                "AddressID": {
                    "type": "integer",
                    "lng":{
                        "code": "Address",
                        "default":"Address"
                    } 
                },
                "ContactID": {
                    "type": "integer",
                    "lng":{
                        "code": "Contact",
                        "default":"Contact"
                    } 
                },
                "LoginName": {
                    "type": "string",
                    "lng":{
                        "code": "LoginName",
                        "default":"Login Name"
                    } 
                },
                "ExternalLogin": {
                    "type": "string",
                    "lng":{
                        "code": "ExternalLogin",
                        "default":"External Login"
                    } 
                },
                "BadgeNo": {
                    "type": "string",
                    "lng":{
                        "code": "BadgeNo",
                        "default":"Badge No"
                    } 
                },
                "LoginCode": {
                    "type": "string",
                    "lng":{
                        "code": "LoginCode",
                        "default":"Login Code"
                    } 
                },
                "ForcePasswordChange": {
                    "type": "boolean",
                    "lng":{
                        "code": "ForcePasswordChange",
                        "default":"Force Password Change"
                    } 
                },
                "LastSignOnDate": {
                    "type": "string",
                    "format":"datetime",
                    "readonly": true,
                    "lng":{
                        "code": "LastSignOnDate",
                        "default":"Last SignOn Date"
                    } 
                },
                "LastSignOffDate": {
                    "type": "string",
                    "format":"datetime",
                    "readonly": true,
                    "lng":{
                        "code": "LastSignOffDate",
                        "default":"Last SignOff Date"
                    } 
                },
                "UserValidDate": {
                    "type": "string",
                    "format":"datetime",
                    "readonly": true,
                    "lng":{
                        "code": "UserValidDate",
                        "default":"User Valid Date"
                    } 
                },
                "LoginExpirationDate": {
                    "type": "string",
                    "format":"datetime",
                    "lng":{
                        "code": "LoginExpirationDate",
                        "default":"Login Expiration Date"
                    } 
                },
                "LoginLockoutDate": {
                    "type": "string",
                    "format":"datetime",                    
                    "lng":{
                        "code": "`LoginLockoutDate`",
                        "default":"Login Lockout Date"
                    } 
                },
                "PasswordLastChangeDate": {
                    "type": "string",
                    "format":"datetime", 
                    "readonly": true,
                    "lng":{
                        "code": "PasswordLastChangeDate",
                        "default":"Password Last Change Date"
                    } 
                },
                "UserClass": {
                    "type": "integer",
                    "lng":{
                        "code": "UserClass",
                        "default":"User Class"
                    },
                    "options":{
                        "value": [0, 1,2],
                        "lngcode":["Default","UserClass1", "UserClass2"],
                        "default": ["Default","Class 1", "Class 2"]
                     }  
                },
                "UserType": {
                    "type": "integer",
                    "lng":{
                        "code": "UserType",
                        "default":"User Type"
                    },
                    "options":{
                        "value": [0, 1,2],
                        "lngcode":["Default","UserType1", "UserType2"],
                        "default": ["Default","Type 1", "Type 2"]
                     } 
                },
                "CurrencyCode": {
                    "type": "string",
                    "lng":{
                        "code": "CurrencyCode",
                        "default":"Currency Code"
                    } 
                },
                "DefaultPage": {
                    "type": "string",
                    "lng":{
                        "code": "DefaultPage",
                        "default":"Default Page"
                    } 
                },
                "Title": {
                    "type": "string",
                    "lng":{
                        "code": "DefaultPage",
